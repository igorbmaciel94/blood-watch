{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "BloodWatch": "Host=localhost;Port=5432;Database=bloodwatch;Username=bloodwatch;Password=bloodwatch"
  },
  "BloodWatch": {
    "Alerts": {
      "BaseCriticalUnits": 100,
      "WarningMultiplier": 1.2,
      "CriticalStepDownPercent": 0.1,
      "ReminderIntervalHours": 24,
      "WorseningBucketDelta": 1,
      "SendRecoveryNotification": true,
      "MetricCriticalUnitsOverrides": {
      }
    },
    "Worker": {
      "FetchPortugalReserves": {
        "IntervalMinutes": 10
      }
    },
    "Portugal": {
      "TransparenciaSns": {
        "BaseUrl": "https://transparencia.sns.gov.pt",
        "DownloadPath": "/explore/dataset/reservas/download?format=json&timezone=UTC&use_labels_for_header=false",
        "TimeoutSeconds": 20,
        "MaxRetries": 3,
        "UserAgent": "BloodWatch/0.1 (+https://github.com/igorbmaciel/blood-watch)"
      }
    }
  }
}
